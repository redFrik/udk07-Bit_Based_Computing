
and
	1 & 0 = 0
	1 & 1 = 1			both of them need to be 1
	0 & 1 = 0
	0 & 0 = 0

or
	1 | 0 = 1
	1 | 1 = 1			one of them need to be 1
	0 | 1 = 1
	0 | 0 = 0

xor (less common)
	1 ^ 0 = 1			different makes 1
	1 ^ 1 = 0			equal makes 0
	0 ^ 1 = 1
	0 ^ 0 = 0

